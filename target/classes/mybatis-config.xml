<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>



	<properties>
		<!-- 여기에 공통 속성을 정의할 수 있습니다 -->
	</properties>

	<!-- 자주 쓰는 설정 -->
	<settings>
		<!-- DB컬럼 스네이크 → 프로퍼티 카멜 자동 매핑 (e.g. created_at -> createdAt) -->
		<setting name="mapUnderscoreToCamelCase" value="true" />
		<!-- 파라미터 이름 그대로 사용 (Java 8+ 컴파일 옵션 -parameters 권장) -->
		<setting name="useActualParamName" value="true" />
	</settings>

	<typeAliases>
		<!-- Type Alias 설정: 패키지 경로에 있는 모든 클래스들을 타입 별칭으로 등록 -->
		<package name="kr.soft.study" />

	</typeAliases>
	<typeHandlers>
		<!-- 여기에 타입 핸들러를 정의할 수 있습니다 -->
	</typeHandlers>

	<mappers>
		<!-- 여기에 매퍼 파일들을 등록할 수 있습니다 -->
		<mapper resource="mappers/MemberMapper.xml" />
		<mapper resource="mappers/BoardMapper.xml" />

	</mappers>

</configuration>
